<%- include("partials/header") %>

  <style>
    input,
    textarea {
      border: 1px solid #eeeeee;
      box-sizing: border-box;
      margin: 0;
      outline: none;
      padding: 10px;
    }

    input[type="button"] {
      -webkit-appearance: button;
      cursor: pointer;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
    }

    .input-group {
      clear: both;
      margin: 15px 0;
      position: relative;
    }

    .input-group input[type='button'] {
      background-color: #eeeeee;
      min-width: 38px;
      width: auto;
      transition: all 300ms ease;
    }

    .input-group .button-minus,
    .input-group .button-plus {
      font-weight: bold;
      height: 38px;
      padding: 0;
      width: 38px;
      position: relative;
    }

    .input-group .quantity-field {
      position: relative;
      height: 38px;
      left: -6px;
      text-align: center;
      width: 62px;
      display: inline-block;
      font-size: 13px;
      margin: 0 0 5px;
      resize: vertical;
    }

    .button-plus {
      left: -13px;
    }

    input[type="number"] {
      -moz-appearance: textfield;
      -webkit-appearance: none;
    }
  </style>


  <main>
    <div class="heading">
      <div class="line"></div>
      <h2>Vous êtes sur le point de vôter pour ce candidat</h2>
      <div class="line"></div>
    </div>
    <div id="categories" style="display: flex;">
      <div class="card" style="width: 18rem;">
        <img src="<%= participant.picture %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title" style="color: black;">
            <%= participant.name %>
          </h5>
          <h5>Votes: <%= participant.votes.length %> voix</h5>
          <label for="number">Votre voix:</label>
          <div class="input-group">
            <input type="button" value="-" class="button-minus" data-field="amount">
            <input type="number" name="amount" id="voteAmount" step="1" min="1" value="1" class="quantity-field">
            <input type="button" value="+" class="button-plus" data-field="amount">
          </div>
          <a href="/user/vote?participant=<%= encodeURIComponent(participant.name) %>&category=<%= encodeURIComponent(participant.category) %>&amount=1"
            class="btn btn-primary" style="color: black;" id="voteLink">Voter</a>
        </div>
      </div>
    </div>

  </main>



  <script type="">


    function incrementValue(e) {
      e.preventDefault();
      var target = e.target;
      var fieldName = target.getAttribute('data-field');
      var parent = target.closest('div');
      var inputField = parent.querySelector('input[name=' + fieldName + ']');
      var currentVal = parseInt(inputField.value, 10);

      if (!isNaN(currentVal)) {
        var voteLink = document.getElementById('voteLink');
        
        voteLink.href = "/user/vote?participant=<%= escape(participant.name) %>&category=<%= escape(participant.category) %>&amount=" + (currentVal + 1);
        

        inputField.value = currentVal + 1;
      } else {
        inputField.value = 1;
      }
    }

    function decrementValue(e) {
      e.preventDefault();
      var target = e.target;
      var fieldName = target.getAttribute('data-field');
      var parent = target.closest('div');
      var inputField = parent.querySelector('input[name=' + fieldName + ']');
      var currentVal = parseInt(inputField.value, 10);

      if (!isNaN(currentVal) && currentVal > 1) {
        var voteLink = document.getElementById('voteLink');

        voteLink.href = "/user/vote?participant=<%= escape(participant.name) %>&category=<%= escape(participant.category) %>&amount=" + (currentVal - 1);

        inputField.value = currentVal - 1;
      } else {
        inputField.value = 1;
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      var inputGroups = document.querySelectorAll('.input-group');

      inputGroups.forEach(function (inputGroup) {
        inputGroup.addEventListener('click', function (e) {
          if (e.target.classList.contains('button-plus')) {
            incrementValue(e);
          } else if (e.target.classList.contains('button-minus')) {
            decrementValue(e);
          }
        });
      });
    });

   
    <% if (alerte && alerte == true ) { %>

      const msg = "Payment was successfully made";

      alert(msg);

    <% }  %>

    // if()

  </script>

  <%- include("partials/footer") %>